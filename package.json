{
  "name": "hugo-theme-karuta",
  "version": "1.0.0",
  "description": "シンプルで読みやすさ重視の Hugo テーマ「karuta」です。",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "lint:js": "eslint \"themes/karuta/static/js/**/*.js\"",
    "lint:js:fix": "eslint --fix \"themes/karuta/static/js/**/*.js\"",
    "lint:js:strict": "eslint --max-warnings=0 \"themes/karuta/static/js/**/*.js\"",
    "lint:css": "stylelint \"themes/karuta/static/css/**/*.css\"",
    "format": "prettier --write \"themes/karuta/static/js/**/*.js\" \"themes/karuta/static/css/**/*.css\" \"themes/karuta/layouts/**/*.html\"",
    "check": "prettier --check \"themes/karuta/static/js/**/*.js\" \"themes/karuta/static/css/**/*.css\" \"themes/karuta/layouts/**/*.html\"",
    "lint:all": "npm run lint:js:strict && npm run lint:css",
    "dev": "hugo server --disableFastRender",
    "build": "hugo --gc --minify",
    "build:draft": "hugo server --buildDrafts --disableFastRender",
    "validate": "npm run check && npm run lint:all",
    "optimize": "echo 'CSS optimization placeholder - PurgeCSS can be added later'",
    "analyze": "echo 'Bundle analysis placeholder'",
    "clean": "rm -rf public resources",
    "build:js": "node build.mjs",
    "build:js:analyze": "node build.mjs && du -h themes/karuta/static/js/dist/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.54.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  }
}
